@model EVote.DataModels.VoterDataModel

<br /><br />

<div class="col-md-3" style="font-size:1.2em;">
    Verify Signature for:
</div>

<hr style="margin:3px 0 12px 0; padding:0 0 0 0; clear:both;" />

<div class="col-md-8">
    @Html.DisplayFor(model => model.FirstName)
    @Html.DisplayFor(model => model.MiddleName)
    @Html.DisplayFor(model => model.LastName)
    @Html.DisplayFor(model => model.Generation)
</div>

<div class="container">&nbsp;</div>
<br />
    <div class="container">
        <div class="col-md-6">
            <br />
            <div style="color:red; font-size:0.8em;">
                <i>Voter's Signature</i>
            </div>
            <img src="@ViewBag.SignFileURL" />
        </div>
    </div>

    <br />
    <div class="container">
        @Html.ActionLink("Signature Ok", "SignInFinish", "Registration", new { barCode = ViewBag.BarCode }, new { @class = "btn btn-success" })
        @Html.ActionLink("Cancel/Re-Sign", "Signature", "Registration", new { barCode = ViewBag.BarCode }, new { @class = "btn btn-danger" })
    </div>
    
