@model IEnumerable<EVote.Context.tblWebConfig>


<table class="table">
    <tr>
        <th style="border:0 none white; text-align:center;" colspan="3">
            <h3>Election Details</h3>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td style="border:0 none white;">
                <strong>@Html.DisplayFor(modelItem => item.Description)</strong>
            </td>
            <td  style="border:0 none white;">
                @Html.EditorFor(modelItem => item.ConfigValue, new { htmlAttributes = new { id = string.Format("item_ConfigValue_{0}", item.WebConfigID), data = item.WebConfigID, @class="form-control" } })
            </td>
            <td  style="border:0 none white;">
                <a class="btn btn-success" href="@Url.Action("SaveSetting", new { source = "Setup", WebConfigID = item.WebConfigID, ConfigSetting = item.ConfigSetting })" id="@("lnkSave"+item.WebConfigID)" onclick="CallSaveSetting(@item.WebConfigID)">Save</a>
            </td>
        </tr>
    }

</table>
